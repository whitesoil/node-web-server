  <div class="wrapper wrapper-full-page">
    <div class="page-header register-page header-filter" filter-color="black" style="background-image: url(' /assets/img/register.jpg'); background-size: cover; background-position: top center;">
      <div class="container">
        <div class="row">
          <div class="col-md-10 ml-auto mr-auto">
            <div class="card card-signup">
              <h2 class="card-title text-center">Register</h2>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-5 ml-auto">
                    <div class="info info-horizontal">
                      <div class="icon icon-rose">
                        <i class="material-icons">timeline</i>
                      </div>
                      <div class="description">
                        <h4 class="info-title">Architecture</h4>
                        <p class="description">
                          You got a Architecture
                        </p>
                      </div>
                    </div>
                    <div class="info info-horizontal">
                      <div class="icon icon-primary">
                        <i class="material-icons">code</i>
                      </div>
                      <div class="description">
                        <h4 class="info-title">Share </h4>
                        <p class="description">
                          Share Your Architecture
                        </p>
                      </div>
                    </div>
                    <div class="info info-horizontal">
                      <div class="icon icon-info">
                        <i class="material-icons">group</i>
                      </div>
                      <div class="description">
                        <h4 class="info-title">Platform</h4>
                        <p class="description">
                          Total solution
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-5 mr-auto">
                    <form class="form" method="post" action="/api/user">
                      <div class="form-group has-default">
                          <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text">
                                <i class="material-icons">face</i>
                              </span>
                            </div>
                            <input for"exampleInput2" type="text" class="form-control" name = "Name" id = "InputName" placeholder="Name..." required>
                          </div>
                        </div>
                      <div class="form-group has-default">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">
                              <i class="material-icons">face</i>
                            </span>
                          </div>
                          <div>
                            <input for"exampleInput2" type="text" class="form-control" name = "ID" id = "InputID" placeholder="ID..." required>
                          </div>
                          <div class="form-check" id = "checkboxstyle">
                            <label class="form-check-label chk1">
                              <input for"exampleInput2" class="form-check-input" type="checkbox" value="" name = "chk1" id="collision_ckbox" disabled required>
                              <span class="form-check-sign">
                                <span class="check "></span>
                              </span>
                            </label>
                          </div>
                          <button class="btn btn-sm" id = "collision" onclick = "collisionCheck()">중복체크</button> 
                          <script>
                            function collisionCheck(){
                              var id = document.getElementById('InputID').value;
                              var json = {"ID":id};
                              var data = JSON.stringify(json);
                              if(id == ""){
                                alert('ID를 입력해주세요.');                                
                              }else{
                                $.ajax({
                                  type: "POST",                                  
                                  url: "/api/idcollision",
                                  contentType : 'application/json',
                                  data : data,
                                  success:function(data){                                                                        
                                    document.getElementById('collision_ckbox').checked = true;
                                    alert('사용가능합니다.');
                                  },
                                  error : function(data){                                    
                                    document.getElementById('collision_ckbox').checked = false;
                                    alert('ID가 중복됩니다.');
                                  }
                                });
                              }
                            }
                          </script>
                        </div>
                      </div>
                      <div class="form-group has-default">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">
                              <i class="material-icons">face</i>
                            </span>
                          </div>
                          <input for"exampleInput2" type="password" class="form-control" name = "PW" id="InputPassword1" placeholder="PassWord..." required>
                        </div>
                      </div>
                      <div class="form-group has-default">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">
                              <i class="material-icons">face</i>
                            </span>
                          </div>
                          <input for"exampleInput2" type="password" class="form-control" id="InputPassword2" placeholder="Comfirm PassWord..." required>
                        </div>
                      </div>
                      <div class="form-group has-default">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">
                              <i class="material-icons">mail</i>
                            </span>
                          </div>
                          <input for"exampleInput2" type="text" class="form-control" name = "Email" id="InputEmail" placeholder="Email..." required>
                        </div>
                      </div>
                      <div class="form-group has-default">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">
                              <i class="material-icons">mail</i>
                            </span>
                          </div>
                          <input for"exampleInput2" type="text" class="form-control" name = "Company" id="Company" placeholder="Company..." required>
                        </div>
                      </div>
                      <div class="form-group has-default">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text">
                              <i class="material-icons">mail</i>
                            </span>
                          </div>
                          <input for"exampleInput2" type="text" class="form-control" name = "Role" id="role" placeholder="Role..." required>
                        </div>
                      </div>
                      <div class="form-check">
                        <label class="form-check-label">
                          <input for"exampleInput2" class="form-check-input " type="checkbox" value="" name = "chk" id="chk" checked required>
                          <span class="form-check-sign">
                            <span class="check"></span>
                          </span>
                          I agree to the
                          <a href="#something">terms and conditions</a>.
                        </label>
                      </div>
                      <div class="text-center">
                        <input type="submit" class="btn btn-primary btn-round mt-4" value="Get Started">
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
